.infos
  padding 30px 5%
  font-family 'PT Sans' 'Source Sans Pro'
  padding-bottom 60px
  input
  	padding 10px
  	border-radius 5px
  	margin-bottom 20px
  	border 1px solid #d8d8d8
  textarea
  	padding 10px
  	border-radius 5px
  	height 200px
  	border 1px solid #d8d8d8
  	margin-bottom 20px
.info-wrapper
	p
		margin-bottom 30px
	a
		color black
	#tabCareer
    .panel-heading
      a
        margin 0
    .panel-collapse
  		p
  			&:last-child
  				margin-bottom 0
	.btn-group
    button
      margin-top 10px
      margin-right 10px
      color #646464
      font-size 12px
      padding 2px
      text-align center
      border-radius  2px
      background-color  #e6e6e6
      font-weight  800
      border 0
      padding 5px 20px
      &.send
        background-color  #646464
        color #fff 
