#products
  li
    background black
    position relative
    &:hover .product-cover
      transition all 0.5s ease
      opacity 0.7
    &:hover .product-details
      transition all 0.3s ease
      opacity 1
    .product-cover
      width 100%
      opacity 1
      img
        width 100%
    .product-details
      position absolute
      bottom 15px
      left 15px
      background-color rgb(255, 255, 255)
      border 1px solid #ebebeb
      border-radius 3px
      width calc(100% - 30px);
      float right
      color #000
      padding 15px
      font 700 1em/1.2 'PT Sans'
      line-height 1.6
      z-index 10
      opacity 0
      a
        color black
        font 700 1em/1.2 'PT Sans'
        text-decoration underline
      .brand
        font-weight 100
        margin-bottom 10px
      .remove
        background-color #cdcdcd
        width 20px
        height 20px
        border none
        font-size 10px
      .btn
        background-color rgb(179, 179, 179)
        border-radius 3px
        clear both
        padding 3px 10px
        color rgb(255, 255, 255)
        display block
        font-size 0.75em
        font-weight 700
        letter-spacing .5px
        line-height 1.38
        text-align center
        border none
        width 90%
        text-decoration none!important
        &:hover
          transition all 0.6s ease
          background-color black
        &.purchase,
        &.reserve
          background-color black
        img
          margin-top 8px
          margin-left 10px
          height 20px
          opacity 0.3
          cursor pointer
          &:hover
            transition all 0.6s ease
            opacity 1
    .love-count
      position absolute
      z-index 11
      width 30px
      font-size 12px
      height 25px
      bottom 30px
      right 30px
      font-family 'PT Sans'
      padding 1px
      color #A3A3A3
      background url('/assets/img/ui/lovely_icon.png') center center no-repeat
      background-size cover
